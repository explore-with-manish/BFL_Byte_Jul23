{
    "compilerOptions": {
        "target": "ES5",
        "outDir": "output",
        "module": "ES2015",
        "noImplicitAny": true,
        "sourceMap": true,
        "removeComments": true,
        "noEmitOnError": true,
        "downlevelIteration": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "DOM",
            "ES2017"
        ]
    },
    "exclude": [
        "node_modules",
        "js-demos"
    ]
}